{{#if success}}
    <div class="ui list stackable segment">
        <h4 class="ui horizontal divider header">
            User Created
        </h4>

        <div class="item">
            <img class="ui avatar image" src="https://s3.amazonaws.com/37assets/svn/765-default-avatar.png">
            <div class="content">
                <a class="header">{{user.name}}</a>
                <div class="description">Created in {{user.date}}.</div>
            </div>
        </div>

        <br><br>
    </div>
{{else}}
    <form class="ui form stackable segment" action="/users" method="POST">
        <h2 class="ui right floated header">Sign Up to {{title}}</h2>
        <div class="ui clearing divider"></div>

        <div class="field">
            <label>Name</label>
            <input placeholder="marge" name="name">
        </div>

        <div class="field">
            <label>Password</label>
            <input placeholder="simpson" type="password" name="password">
        </div>

        <button class="ui blue submit button"><i class="sign in icon"></i> Sign Up</button>
    </form>
{{/if}}