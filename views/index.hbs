<form class="ui stacked stackable segment form" action="/users/login" method="POST">
    <h2 class="ui right floated header">Login to {{title}}</h2>
    <div class="ui clearing divider"></div>

    <div class="field">
        <label>Name</label>
        <input placeholder="homer" name="name">
    </div>

    <div class="field">
        <label>Password</label>
        <input placeholder="simpson" type="password" name="password">
    </div>

    <button class="ui blue submit button"><i class="sign in icon"></i> Login</button>
</form>